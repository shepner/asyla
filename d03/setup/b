apt-get update && apt-get install -y cloud-init openssh-server && systemctl enable ssh && systemctl start ssh && mkdir -p /var/lib/cloud/seed/nocloud && curl -s https://raw.githubusercontent.com/shepner/asyla/master/d03/setup/cloud-init-userdata.yml > /var/lib/cloud/seed/nocloud/user-data && cloud-init clean && cloud-init init --local && cloud-init init && cloud-init modules --mode config && cloud-init modules --mode final && echo "Bootstrap complete! Try: ssh docker@10.0.0.62"
